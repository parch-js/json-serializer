{
  "name": "@parch-js/rest-serializer",
  "version": "0.0.1",
  "description": "RestSerializer for parch to normalize request/response",
  "main": "index.js",
  "repository": "https://github.com/parch-js/rest-serializer",
  "author": "Dylan Foster <dylan947@gmail.com>",
  "license": "MIT",
  "keywords": [
    "parch",
    "restful",
    "rest",
    "serializer"
  ],
  "scripts": {
    "build": "babel src -d lib",
    "build:watch": "chokidar 'src/**' 'test/**/*.js' -c 'yarn build' --initial",
    "coverage": "nyc yarn test",
    "changelog": "conventional-changelog -s -p angular -i CHANGELOG.md",
    "docs": "yuidoc . -o docs",
    "lint": "eslint ./src ./test",
    "prepare-release": "curl -sL https://gist.githubusercontent.com/dylanfoster/35b06db9aaa9237da77eff4a8eec0a22/raw/83ec714ec64f7ec36c5004588aa259354fc87b51/prepare-release.sh | bash -s",
    "prepublish": "yarn build",
    "pretest": "yarn build",
    "test": "NO_DEPRECATION=parch NODE_ENV=test mocha --recursive --compilers js:babel-register --timeout 5000",
    "test:cover": "yarn coverage",
    "watch": "chokidar 'src/**' 'test/**/*.js' -c 'yarn test' --initial"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^7.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "conventional-changelog-cli": "^1.2.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.11.1",
    "eslint-config-unstandard": "^1.4.0",
    "mocha": "^3.2.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "sqlite3": "^3.1.4",
    "yuidoc-lucid-theme": "^0.1.2",
    "yuidocjs": "^0.10.2"
  },
  "dependencies": {
    "inflect": "^0.3.0",
    "nyc": "^10.2.0",
    "restify-errors": "^4.3.0",
    "sequelize": "^3.30.4"
  },
  "eslintConfig": {
    "extends": "unstandard",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        1,
        {
          "code": 100
        }
      ],
      "new-cap": 0,
      "no-magic-numbers": [
        2,
        {
          "ignore": [
            -1,
            0,
            1
          ],
          "ignoreArrayIndexes": true
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-plugin-add-module-exports",
      "transform-regenerator",
      "transform-async-to-generator"
    ]
  },
  "nyc": {
    "require": "regenerator-runtime/runtime",
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  }
}
